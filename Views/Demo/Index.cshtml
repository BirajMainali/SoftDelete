@model System.Collections.Generic.List<SoftDeleteDemo.Entities.DemoModel>

@{
    ViewBag.Title = "Demo Model";
    Layout = "_Layout";
}

<table class="table table-hover table-striped table-bordered">
    <thead>
    <tr>
        <td>#</td>
        <td>Description</td>
        <td>Action</td>
    </tr>
    </thead>
    <tbody>
    @{
        var sn = 1;
        foreach (var d in Model)
        {
            <tr>
                <td>@(sn++)</td>
                <td>@d.Description</td>
                <td>
                    <a class="btn btn-danger" asp-controller="Demo" asp-action="Remove" asp-route-id="@d.Id"> Remove</a>
                </td>
            </tr>
        }
    }
    </tbody>
</table>